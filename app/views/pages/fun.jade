extends ../layout

block content	
	section.bg-primary#about
		//-h5#homeHeading &nbsp;点击上方蓝字关注我哟～
		.container
			.row
				.col-lg-8.col-lg-offset-2.text-center
					.fun-body
						h2.section-heading #{fun.title}
						//-hr.light
						p.text-faded.text-left #{fun.content}
						img(src="#{fun.picture}", width="100%")
					//-hr
					.fun-foot
						a(href="#services").page-scroll.btn.btn-primary.btn-xl.sr-button Donate ME!

	section.no-padding#portfolio
		.container-fluid
			.row.no-gutter.popup-gallery
				.col-lg-4.col-sm-6
					a.portfolio-box(href="/images/port/1.jpg")
						img.img-responsive(src="/images/port/1.jpg", alt="")
						.portfolio-box-caption
							.portfolio-box-caption-content
								.project-category.text-faded Category
								.project-name Project Name
				.col-lg-4.col-sm-6
					a.portfolio-box(href="/images/port/2.jpg")
						img.img-responsive(src="/images/port/2.jpg", alt="")
						.portfolio-box-caption
							.portfolio-box-caption-content
								.project-category.text-faded Category
								.project-name Project Name
				.col-lg-4.col-sm-6
					a.portfolio-box(href="/images/port/3.jpg")
						img.img-responsive(src="/images/port/3.jpg", alt="")
						.portfolio-box-caption
							.portfolio-box-caption-content
								.project-category.text-faded Category
								.project-name Project Name
	section.bg-white#contact
		.container
			.row
				.col-lg-8.col-lg-offset-2.text-center
					h2.section-heading Let's Get In Touch!
					hr.primary
					p Just follow me or send me an email!
					.col-lg-4.col-lg-offset-2.text-center
						i.fa.fa-phone.fa-3x.sr-contact
						p 123-456-6789
					.col-lg-4.text-center
						i.fa.fa-envelope-o.fa-3x.sr-contact
						p
							a(href="mailto:your-email@your-domain.com") feedback@startbootstrap.com